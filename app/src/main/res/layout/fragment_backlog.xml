<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="ca.mvp.scrumtious.scrumtious.view_impl.BacklogFragment">


<android.support.v7.widget.RecyclerView
    android:id="@+id/backlogFragmentRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    >

</android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/backlogFragmentNoUserStoriesEmptyStateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#9B9B9B"
            android:layout_marginBottom="50dp"
            android:text="@string/no_user_stories_to_show_here"
            android:textSize="24sp" />
    </LinearLayout>

</FrameLayout>
