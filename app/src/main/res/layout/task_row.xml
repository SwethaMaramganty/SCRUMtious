<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/taskRowCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingTop="10dp"
    app:cardBackgroundColor="#F44336"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/taskRowTaskDescTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/droid_sans"
            android:paddingLeft="15dp"
            android:paddingRight="@dimen/task_desc_padding"
            android:text="@string/test_desc"
            android:textColor="@color/white"
            android:textSize="14sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/taskAssignedToIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_member_white"/>

            <TextView
                android:id="@+id/taskRowTaskAssignedToTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:fontFamily="@font/droid_sans"
                android:text="@string/test_assigned_to"
                android:textColor="@color/white"
                android:textSize="11sp"/>

            <ImageButton
                android:id="@+id/taskRowSwitchTaskStatesImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_task_switch_state_white_24dp"/>

            <ImageButton
                android:id="@+id/taskRowDeleteTaskImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_delete_white"/>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
