<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp"
    app:contentPadding="10dp"
    card_view:cardBackgroundColor="@color/cardview_light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="4dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/projectRowTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/droid_sans"
            android:paddingBottom="5dp"
            android:text="@string/app_name"
            android:textColor="#d10f0f"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/projectRowEmailAddressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/droid_sans"
            android:text="@string/owner"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/projectRowProjectDescTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/droid_sans"
            android:text="@string/test_desc"
            android:textSize="16sp"/>

        <ImageButton
            android:id="@+id/projectRowExpandDescIconImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:scaleType="fitStart"
            android:src="@drawable/ic_more"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/projectRowProjectCreatedDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/droid_sans"
                android:text="@string/test_date_dec_20_2018_2_15pm"
                android:textColor="#757575"
                android:textSize="14sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/projectRowProjectNumberOfMembersImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_member"/>

                <TextView
                    android:id="@+id/projectRowProjectNumberOfMembersTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/droid_sans"
                    android:text="2"
                    android:textColor="#09c2ff"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/projectRowProjectNumberOfSprintsImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sprint_row"
                    />

                <TextView
                    android:id="@+id/projectRowProjectNumberOfSprintsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/droid_sans"
                    android:text="2"
                    android:textColor="#FA0101"
                    android:textSize="14sp"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>