<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.mvp.scrumtious.scrumtious.view_impl.InvitationsFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/invitationsFragmentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        >

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/invitationsFragmentNoInvitationsEmptyStateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#9B9B9B"
            android:layout_marginBottom="50dp"
            android:text="@string/no_invitations_to_show"
            android:textSize="24sp" />
    </LinearLayout>

</FrameLayout>
